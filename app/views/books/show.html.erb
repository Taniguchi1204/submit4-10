<%= render 'users/user', {book: @book, user: @user} %>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
        <table class="table table-hover table-inverse">
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><br />
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_detail.id) do %>
                <%= @book_detail.title %>
              <% end %>
            </td>
            <td>
              <%= @book_detail.body %>
            </td>

          <% if @user.id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book_detail.id) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book_detail.id), method: :delete,"data-confirm" => "本当に削除しますか？"%>
            </td>
          <% end %>
          </tr>
        </table>
    </div>
  </div>
</div>